// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//DB Model
model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  email     String  @unique
  password  String 
  userRole  UserRole[] //Relationship UserRole
  userDraft UserDraft[] //Relationship UserDraft
  userCollection UserCollection[] //Relationship UserCollection
}

model UserRole {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references:[id]) //Relationship User
  userId    Int
  role      Role    @relation(fields: [roleId], references:[id]) //Relationship Role
  roleId    Int

}

model Role {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  userRole  UserRole[] //Relationship UserRole
}

model UserDraft {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references:[id]) //Relationship User
  userId    Int 
  draft     Draft   @relation(fields: [draftId], references:[id]) //Relationship Draft
  draftId   Int 
}

model Draft {
  id        Int     @id @default(autoincrement())
  name      String
  description String?
  portraitUrl String?
  totalSupply Int
  status    Status     @default(draft) //status enum
  contract  String
  hash      String? @unique
  userId    String 
  userDraft UserDraft[] //Relationship UserDraft
  draftItem DraftItem[] //Relationship DraftItem
}

enum Status{
  draft
  inProcess
  approved
  rejected
}

model DraftItem {
  id        Int     @id @default(autoincrement())
  name      String 
  description String
  image     String 
  draft     Draft   @relation(fields: [draftId], references:[id]) //Relationship Draft
  draftId   Int
}

model UserCollection {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references:[id]) //Relationship User
  userId    Int 
  collection  Collection   @relation(fields: [collectionId], references:[id]) //Relationship Collection
  collectionId   Int 
}

model Collection {
  id        Int     @id @default(autoincrement())
  url       String  @unique
  items     Json
  userCollection UserCollection[] //Relationship UserCollection
}